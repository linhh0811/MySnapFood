            <FluentNavLink Icon="@(new Icons.Regular.Size24.Settings())" Href="/Quan-Ly/Size-PhanLoai">QL chung</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.DataBarVertical())" Href="/Quan-Ly/ThongKe">Thống kê</FluentNavLink>
