@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            <!-- Bọc nội dung trong FluentLayout -->
            <FluentLayout Style="height: 100%;">
                <!-- Thêm Fluent UI providers -->
                <FluentToastProvider MaxToastCount="10" Position="ToastPosition.BottomRight" />
                <FluentDialogProvider />
                <FluentTooltipProvider />

                @Body
            </FluentLayout>
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    /* CSS để đảm bảo tương thích */
    .page {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #f8f9fa;
    }

    main {
        flex: 1;
        overflow: auto;
    }

    .content {
        height: 100%;
    }

    /* Đảm bảo Fluent UI không bị ảnh hưởng bởi CSS khác */
    fluent-provider {
        height: 100%;
    }
</style>