@page "/Thanh-Toan/{PhuongThucNhanHang}"
@inherits CheckoutBase
@using Service.SnapFood.Client.Dto.Cart
@using Microsoft.FluentUI.AspNetCore.Components
@using Service.SnapFood.Client.Enums
@using Service.SnapFood.Share.Model.SQL
@if (isLoading)
{
    <div class="loading-center">
        Đang tải...
    </div>
}
else
{
    @if (CartModel == null || !CartModel.CartItems.Any())
    {   
        <div class="empty-cart">
            <div class="empty-icon">🛒</div>
            <h2 class="empty-title">Giỏ hàng trống</h2>
            <p class="empty-description">
                Bạn chưa có món nào trong giỏ hàng.<br>
                Hãy khám phá các món ngon và thêm vào giỏ nhé!
            </p>
            <a href="#" class="cta-button pulse" @onclick="NavigateToHome">
                🍕 Khám phá món ngon
            </a>
        </div>
    }
    else
    {
        <div class="row" style="margin-top:30px;">
            <div class="col-7">
                <div class="container p-0">
                    <div class="card shadow">
                        <div class="card-body" style="padding:24px;">
                            <h4 class="card-title d-flex justify-content-between">
                                <span>CHI TIẾT ĐƠN HÀNG</span>
                                <FluentNavLink Href="/Gio-Hang">
                                    <span class="text-primary" style="cursor: pointer">✎</span>
                                </FluentNavLink>
                            </h4>
                            <hr style="margin-bottom:0;" />
                            @foreach (var item in CartModel.CartItems)
                            {
                                var totalItemPrice = item.BasePrice * item.Quantity;
                                <div class="row align-items-center border-bottom pb-2">
                                    <div class="col-2">
                                        <img style="max-width:70px;max-height:60px;" src="@item.ImageUrl" alt="@item.ItemName" class="img-fluid rounded" />
                                        
                                    </div>
                                    <div class="col-10">
                                        <p class="my-1 fw-bold" style="@(item.ModerationStatus == ModerationStatus.Rejected ? "color: #999; text-decoration: line-through;" : "")">@item.ItemName</p>

                                        @if (item.ModerationStatus == ModerationStatus.Rejected)
                                        {
                                            <span style="color: red; font-weight: bold; margin-left: 8px;">(HẾT HÀNG)</span>
                                        }
                                        @if (item.ItemType == ItemType.Product)
                                        {
                                            <div style="max-height: 80px; overflow-y: auto; display: flex; flex-direction: column; gap: 4px; color: gray;padding-left:20px;">
                                                <div style="cursor: pointer;font-size:12px;">
                                                    Kích thước: @item.SizeName
                                                </div>
                                            </div>
                                        }
                                        @if (item.ItemType == ItemType.Combo)
                                        {
                                            <div style="max-height: 80px; overflow-y: auto; display: flex; flex-direction: column; gap: 4px; color: gray;padding-left:20px;">
                                                @foreach (var x in item.ComboItems)
                                                {
                                                    <p style="cursor: pointer;font-size:12px; margin:0px">@x.ProductName (@x.SizeName)</p>
                                                }
                                            </div>
                                        }
                                        @if (item.PriceEndown > 0)
                                        {
                                            <p class="my-2 text-muted">x @item.Quantity <span class="float-end fw-bold"><del class="float-end">@((item.BasePrice * item.Quantity).ToString("N0")) đ</del> <br />@((item.PriceEndown * item.Quantity).ToString("N0")) đ</span></p>
                                        }
                                        else
                                        {
                                            <p class="my-2 text-muted">x @item.Quantity <span class="float-end fw-bold">@((item.BasePrice * item.Quantity).ToString("N0")) đ</span></p>
                                        }
                                    </div>
                                </div>
                            }
                            <div class="mt-3">
                                <p class="d-flex justify-content-between my-2 fw-bold">
                                    Tổng <span class="fw-bold">@totalPrice.ToString("N0") đ</span>
                                </p>
                                <p class="d-flex justify-content-between my-2 fw-bold">
                                     Khuyến mãi <span class="fw-bold">@totalPriceEndown.ToString("N0") đ</span>
                                </p>
                                <hr />
                                <p class="d-flex justify-content-between my-2 fw-bold">
                                    Chi phí tạm tính
                                    <span class="fw-bold">
                                        @((totalPrice - totalPriceEndown).ToString("N0")) đ
                                    </span>
                                </p>
                                @if (PhuongThucNhanHang == "Giao-Tan-Noi")
                                {
                                    <p class="d-flex justify-content-between mb-1 fw-bold">
                                        <span>
                                            Phí giao hàng (@KhoangCach.ToString("F2") km) <FluentIcon Title="abc" Value="@(new Icons.Regular.Size16.QuestionCircle())" />
                                        </span>    <span class="fw-bold">@PhiVanChuyen.ToString("N0") đ</span>
                                    </p>
                                }
                            </div>
                            <hr />
                            <div>
                                <p class="d-flex justify-content-between my-2 fw-bold">
                                    Mã giảm giá <span class="fw-bold">@DiscountCodeValue.ToString("N0") đ</span>
                                </p>
                                <div class="input-group" @onclick="OpenModalDiscountCode">
                                    <input type="text"
                                           class="form-control"
                                           placeholder="Hãy chọn mã giảm giá" @bind-value="@DiscountCode.Code" readonly/>
                                    <button class="btn " style="background-color: #ff5b6a; color: white;">Chọn mã giảm giá</button>
                                </div>
                            </div>
                            <hr/>
                            <div>
                                <p class="d-flex justify-content-between my-2 fw-bold">
                                    Tổng <span class="fw-bold">@((totalPrice - totalPriceEndown + PhiVanChuyen - DiscountCodeValue).ToString("N0")) đ</span>
                                </p>
                            </div>
                            <div class="my-3">
                                <label class="mb-2 fw-bold">Ghi chú</label>
                                <textarea class="form-control" @bind="Notes" id="pickupNote" rows="3" placeholder="Ghi chú (nếu có)"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="container p-0">
                    <div class="card shadow">
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between">
                                <span>Thông tin người nhận</span>
                                <FluentNavLink Href="/Dia-Chi">
                                    <span class="text-primary" style="cursor: pointer">✎</span>
                                </FluentNavLink>
                            </h4>
                            @if (PhuongThucNhanHang == "Nhan-Tai-Quay")
                            {
                                <div class="mt-3">
                                    <div class="mb-2">
                                        <label class="mb-2">Tên người nhận</label>
                                        <input type="text" class="form-control" id="pickupName" @bind-value="ReceiverName" />
                                    </div>
                                    <div class="mb-2">
                                        <label class="mb-2">Số điện thoại</label>
                                        <input type="text" class="form-control" id="pickupPhone" @bind-value="ReceiverPhone" />
                                    </div>
                                </div>
                            }
                            else
                            {
                                @if (string.IsNullOrEmpty(Address.FullName))
                                {
                                    <div class="alert alert-info">
                                        Địa chỉ của bạn trống.
                                        <a>Thêm địa chỉ</a>
                                    </div>
                                }
                                else
                                {
                                    <p class="mb-1">@Address.FullName</p>
                                    <p class="mb-1">@Address.NumberPhone</p>
                                    <p class="mb-1">@Address.SpecificAddress</p>
                                    <p class="mb-1">@Address.Ward, @Address.District, @Address.Province</p>
                                    @if (!string.IsNullOrEmpty(@Address.Description))
                                    {
                                        <p class="mb-1">Ghi chú: @Address.Description</p>
                                    }
                                    
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="container p-0 mt-2">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title d-flex justify-content-between">
                                <span>Thông tin cửa hàng</span>
                            </h4>
                            @if (string.IsNullOrEmpty(Store.StoreName))
                            {
                                <div class="alert alert-info">
                                    Hệ thống lỗi! Đang không tồn tại cửa hàng trên hệ thống.
                                </div>
                            }
                            else
                            {
                                <p class="mb-1" style="font-size:16px;">@Store.StoreName</p>
                                <p class="mb-1">@Store.Address.NumberPhone</p>
                                <p class="mb-1">@Store.Address.SpecificAddress</p>
                                <p class="mb-1">@Store.Address.Ward, @Store.Address.District, @Store.Address.Province</p>
                                @if (!string.IsNullOrEmpty(@Store.Address.Description))
                                {
                                    <p class="mb-1">Ghi chú: @Store.Address.Description</p>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="container mt-2 p-0">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="fw-bold">THANH TOÁN</h4>
                            <div class="row mt-3 g-3">
                                <!-- Tiền mặt -->
                                <div class="col-md-4">
                                    <label class="border rounded p-3 d-flex flex-column align-items-center justify-content-center shadow-sm position-relative w-100 active">
                                        <input type="radio" name="payment" value="cash" class="form-check-input position-absolute top-0 start-0 m-2" @onclick="()=>SelectedPayment(PaymentType.Cash)" checked="@(SelectedPaymentMethod == PaymentType.Cash)" />
                                        <img src="https://cdn-icons-png.flaticon.com/512/2331/2331949.png" alt="Tiền mặt" width="50" />
                                        <span class="mt-2 fw-bold">Tiền mặt</span>
                                    </label>
                                </div>
                               
                                <div class="col-md-4">
                                    <label class="border rounded p-3 d-flex flex-column align-items-center justify-content-center shadow-sm position-relative w-100">
                                        <input type="radio" name="payment" value="momo" class="form-check-input position-absolute top-0 start-0 m-2"
                                               @onclick="()=>SelectedPayment(PaymentType.BankTransfer)"
                                               checked="@(SelectedPaymentMethod == PaymentType.BankTransfer)" />
                                        <img src="https://img.vietqr.io/image/BIDV-V3CASSSNAPFOOD-compact.png" alt="MoMo E-Wallet" width="50" />
                                        <span class="mt-2 fw-bold">CK Ngân hàng</span>
                                    </label>
                                </div>
                            </div>
                            <div class="container mt-2 p-0 text-end">
                                <button type="submit" style="background-color: #ff5b6a; color: white;" class="btn" disabled="@(string.IsNullOrEmpty(Store.StoreName))" @onclick="HandleCheckOut2">Đặt hàng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

<style>
    /* Style chính cho container giỏ hàng trống */
    .empty-cart {
        text-align: center;
        padding: 60px 20px;
        border-radius: 20px;
        margin: 40px 0;
        position: relative;
        overflow: hidden;
    }

        /* Hiệu ứng shimmer (ánh sáng lướt qua) */
        .empty-cart::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: rotate(45deg);
            animation: shimmer 3s infinite;
        }

    /* Style cho icon giỏ hàng */
    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, #ff9ff3, #feca57);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 60px;
        color: white;
        box-shadow: 0 10px 30px rgba(255, 159, 243, 0.3);
        animation: float 3s ease-in-out infinite;
    }

    /* Style cho tiêu đề */
    .empty-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }

    /* Style cho mô tả */
    .empty-description {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    /* Style cho button call-to-action */
    .cta-button {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        color: white;
        padding: 15px 40px;
        border: none;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
        position: relative;
        overflow: hidden;
    }

        /* Hover effect cho button */
        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(255, 107, 107, 0.4);
        }

        /* Hiệu ứng ánh sáng lướt qua button */
        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .cta-button:hover::before {
            left: 100%;
        }

    /* Animation pulse cho button */
    .pulse {
        animation: pulse 2s infinite;
    }
</style>