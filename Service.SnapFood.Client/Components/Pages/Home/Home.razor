@page "/"
@using Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Icons
@using Service.SnapFood.Client.Components.Pages.Category
@using Service.SnapFood.Client.Components.Pages.Mix
<style>
    .carousel-item img {
    width: 100%;
    height: auto; /* Đảm bảo tỷ lệ ảnh */
    max-height: 400px; /* Giới hạn chiều cao tối đa */
    object-fit: cover; /* Cắt ảnh nếu cần để lấp đầy */
    }
</style>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" style="z-index:2;">
    <div class="carousel-indicators">
        @for (int i = 0; i < slides.Count; i++)
        {
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i"
            class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : null)" aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner">
        @foreach (var slide in slides)
        {
            <div class="carousel-item @(slides.IndexOf(slide) == 0 ? "active" : "")">
                <img src="@slide.imgurl" class="d-block w-100" alt="Slide @(slides.IndexOf(slide) + 1)">

            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="container my-4">
    
    <CategoryHome></CategoryHome>
</div>
<div class="container my-4">
    <h2 class="fw-bold">CÓ THỂ BẠN THÍCH MÓN NÀY</h2>
    <hr>
    <CoTheBanThichMonNay></CoTheBanThichMonNay>

</div>
