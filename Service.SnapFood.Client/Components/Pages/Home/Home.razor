@page "/"
@using Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Icons
@using Service.SnapFood.Client.Components.Pages.Category
@using Service.SnapFood.Client.Components.Pages.Mix
<style>
    .carousel-item img {
    width: 100%;
    height: auto; /* Đảm bảo tỷ lệ ảnh */
    max-height: 400px; /* Giới hạn chiều cao tối đa */
    object-fit: cover; /* Cắt ảnh nếu cần để lấp đầy */
    }
</style>

<div id="carouselExampleIndicators"
     class="carousel slide"
     data-bs-ride="carousel"
     data-bs-interval="2000"
     style="z-index:2;">

    <!-- Indicator -->
    <div class="carousel-indicators">
        @for (int i = 0; i < slides.Count; i++)
        {
            <button type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide-to="@i"
                    class="@(i == 0 ? "active" : "")"
                    aria-current="@(i == 0 ? "true" : null)"
                    aria-label="Slide @(i + 1)">
            </button>
        }
    </div>

    <!-- Slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < slides.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@slides[i].imgurl"
                     class="d-block w-100"
                     style="max-height:400px; object-fit:cover;"
                     alt="Slide @(i + 1)">
            </div>
        }
    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<div class="container my-4">
    
    <CategoryHome></CategoryHome>
</div>
<div class="container my-4">
    <h2 class="fw-bold">CÓ THỂ BẠN THÍCH MÓN NÀY</h2>
    <hr>
    <CoTheBanThichMonNay></CoTheBanThichMonNay>

</div>
